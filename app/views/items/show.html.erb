<div class="panel panel-danger">
    <div class="panel-heading">Contact Information</div>
      <div class="panel-body">
        <h2>Nombre : </h2>
		<%= @item.nombre %>
		<p>
		<h3>descripcion :</h3>
		<%= @item.descripcion %>
		<p>

		<h3>foto</h3>
		<%= image_tag @item.foto.url(:medium) %>

		<p>
		<a href=<%=items_path%> >Items</a>
		 
	</div>
</div>

<% @item.posts.each do |post| %>

	Autor : <%= post.autor %>
	<p>
	Text : <%= post.text %>
	<p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@item, @item.posts.build]) do |f| %>
  <p>
    <%= f.label :autor %><br>
    <%= f.text_field :autor %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', items_path %>
| <%= link_to 'Edit', edit_item_path(@item) %> | <%= link_to 'Destroy', item_path(@item),method: :delete, data: { confirm: 'Are you sure?' } %>

