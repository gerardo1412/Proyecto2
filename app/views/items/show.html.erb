<div class="panel panel-danger">
    <div class="panel-heading">Detalles item</div>
      <div class="panel-body">
        <h2>Nombre : </h2>
		<%= @item.nombre %>
		<p>
		<h3>descripcion :</h3>
		<%= @item.descripcion %>
		<p>

		<h3>cantidad :</h3>
		<%= @item.cantidad %>
		<p>


		<h3> usados :</h3>
		<%= @item.usados %>
		<p>

		<h3>foto</h3>
		<%= image_tag @item.foto.url(:medium) %>

		<p>
		<a href=<%=items_path%> >Items</a>
		 
	</div>
</div>

<% @item.posts.each do |post| %>

	<strong> Autor : </strong><%= post.autor %>
	<p>
	<strong>  Comentario : </strong><%= post.text %>
	<p>
<% end %>

<h2>Agregar comentario:</h2>
<%= form_for([@item, @item.posts.build]) do |f| %>
  <p>
    <%= f.label :autor %><br>
    <%= f.text_field :autor %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 

<%= link_to 'Borrar Item', item_path(@item),method: :delete, data: { confirm: 'Are you sure?' } %>

