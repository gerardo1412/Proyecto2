<div class="container-sing-up" >
<h2>Registro</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


  <!-- , hint: 'to make a comment in form' -->

  <div class="form-inputs">
    <%= f.input :nombre, required: true,:input_html => { :class => "mytext" }%>
    <%= f.input :tipo, required: true, :as => :hidden , :input_html => { :class => "mytext" , :value => 1 }%>
    <br>
    <%= f.input :email, required: true, autofocus: true ,:input_html => { :class => "mytext" }, :validates => true %>
    <%= f.input :password, required: true,:input_html => { :class => "mytext" }%>
    <%= f.input :password_confirmation, required: true,:input_html => { :class => "mytext" }%>

    
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
  <% end %>
</div>